{
  "name": "stylelint-plugin-color",
  "version": "1.0.0",
  "author": "BTMuli <bt-muli@outlook.com>",
  "description": "A stylelint plugin to enforce color formats",
  "homepage": "https://github.com/BTMuli/stylelint-plugin-color",
  "main": "dist/index.cjs",
  "type": "module",
  "scripts": {
    "test:color": "node --test --import tsx tests/color.test.js",
    "test:rule": "node --test --import tsx tests/rule.test.js",
    "build": "tsup src/index.ts --format cjs,esm --dts --sourcemap --external stylelint --out-dir dist",
    "format": "prettier --write ."
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "stylelint",
    "stylelint-plugin",
    "stylelint-rule",
    "color"
  ],
  "license": "MIT",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@types/node": "^22.15.19",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "stylelint": "^16.19.1",
    "stylelint-test-rule-node": "^0.4.0",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4"
  }
}
